            </sales_order_payment_cancel>

            <order_cancel_after>
                <observers>
                    <olark_chatbox_order_cancel_after>
                        <type>singleton</type>
                        <class>olark_chatbox_model_observer</class>
                        <method>recordEvent</method>
                    </olark_chatbox_order_cancel_after>
                </observers>
            </order_cancel_after>

            <sales_order_payment_cancel_invoice>
