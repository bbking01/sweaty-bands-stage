<?xml version="1.0"?>
<config>
    <modules>
        <AW_Checkoutpromo>
            <version>1.2.2</version><platform>ce</platform>
        </AW_Checkoutpromo>
    </modules>
    <frontend>
        <routers>
            <checkoutpromo> 
                <use>standard</use>
                <args>
                    <module>AW_Checkoutpromo</module>
                    <frontName>fcheckoutpromo</frontName>
                </args>
            </checkoutpromo>
        </routers>
        <layout>
            <updates>
                <checkoutpromo>
                    <file>checkoutpromo.xml</file>
                </checkoutpromo>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <checkoutpromo>
                <use>admin</use>
                <args>
                    <module>AW_Checkoutpromo</module>
                    <frontName>checkoutpromo</frontName>
                </args>
            </checkoutpromo>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <promo>
                <children>
                    <checkoutpromo translate="title" module="checkoutpromo">
                        <title>Checkout Promo Rules</title>
                        <action>checkoutpromo/adminhtml_checkoutpromo/</action>
                    </checkoutpromo>
                </children>
            </promo>
        </menu>
        <acl>
            <resources>
                <admin>
                    <children>
                        <promo>
                            <children>
                                <checkoutpromo>
                                    <title>Checkout Promo Rules</title>
                                </checkoutpromo>
                            </children>
                        </promo>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <checkoutpromo>
                    <file>checkoutpromo.xml</file>
                </checkoutpromo>
            </updates>
        </layout>
    </adminhtml>   
    <global>
        <models>
            <checkoutpromo>
                <class>AW_Checkoutpromo_Model</class>
                <resourceModel>checkoutpromo_mysql4</resourceModel>
            </checkoutpromo>
            <checkoutpromo_mysql4>
                <class>AW_Checkoutpromo_Model_Mysql4</class>
                <entities>
                    <rule>
                        <table>aw_checkoutpromorule</table>
                    </rule>
                </entities>
            </checkoutpromo_mysql4>
        </models>
        <resources>
            <checkoutpromo_setup>
                <setup>
                    <module>AW_Checkoutpromo</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </checkoutpromo_setup>
            <checkoutpromo_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </checkoutpromo_write>
            <checkoutpromo_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </checkoutpromo_read>
        </resources>
        <blocks>
            <checkoutpromo>
                <class>AW_Checkoutpromo_Block</class>
            </checkoutpromo>
        </blocks>
        <helpers>
            <checkoutpromo>
                <class>AW_Checkoutpromo_Helper</class>
            </checkoutpromo>
        </helpers>        
    </global>
</config>